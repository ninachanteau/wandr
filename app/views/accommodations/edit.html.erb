<h2 class="text-center">Edit accommodation</h2>

<div class="new-container">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <img src="<%= @accommodation.photo %>" size="16" alt="Edit Entry">

      <%= simple_form_for @accommodation do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :email %>
        <%= f.input :url %>
        <%= f.input :photo %>
        <%= f.submit "Update accommodation", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
</div>



