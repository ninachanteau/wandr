
function loadAccommodations(innerHTML) {
  const wrapper = document.querySelector('.wrapper');
  wrapper.innerHTML = innerHTML;
  // reload forms wepback script
  const head = document.querySelector("head");
  const scriptElement = document.createElement('script');
  scriptElement.src = '<%= javascript_pack_tag "forms" %>'.match(/src="(.*)">/)[1];
  head.appendChild(scriptElement);
};

loadAccommodations('<%= j render "index", accommodations: @accommodations, trip_participants: @trip_participants, trip_dates: @trip_dates, trip: @trip, accommodation: @accommodation, my_accommodations: @my_accommodations %>');


function changeTitle(title) {
  const navbarTitle = document.querySelector('.navbar-title');
  navbarTitle.innerHTML = title;
}

