<div class="new-container">
  <div class="container">

    <div class="header">
      <div class="title text-center"> <h2><%= @trip.name  %>  ...  <i class="fa fa-university" style="color: #AAAAAA"></i></h2>
      </div>
    </div>

    <div class="activities-container">

      <div class="activities-ctn">

        <div class="activities-card">
         <h4>Today (<%= Date.today.strftime("%b %d, %Y") %>) </h4>
         <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Contact</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% @activities.where(date: Date.today).each do |activity|  %>
                <tr>
                  <td class="name">
                    <p><%= link_to activity.name, activity.url, class: "name-link", target: "_blank" %></p>
                  </td>
                  <td class="contact">
                    <p><%= activity.address%></p>
                    <p><%= activity.email%></p>
                    <p><%= activity.phone_number%></p>
                  </td>
                  <td class="date">
                    <p><%= activity.date.strftime("%b %d, %Y") %></p>
                    <p>@ <%= activity.date.strftime("%H:%M") %></p>
                  </td>
                  <td class="description">
                    <p><%= activity.description%></p>
                  </td>
                  <td class="status">
                    <div class="<%= activity.status%>">
                      <div class="btn-group">
                        <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= activity.status%>
                        </button>
                        <div class="dropdown-menu">
                          <%= link_to "Wishlist", trip_activity_path(@trip, activity, status: "Wishlist"), method: :patch, class: "dropdown-item status-dropdown-item" %>
                          <%= link_to "Booked", trip_activity_path(@trip, activity, status: "Booked"), method: :patch, class: "dropdown-item status-dropdown-item" %>
                          <div class="dropdown-divider"></div>
                          <%= link_to "Delete", trip_activity_path(@trip, activity), method: :delete, class: "dropdown-item status-dropdown-item" %>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="activities-card">

          <!-- Button trigger modal -->
          <div type="button" data-toggle="modal" data-target="#ActivityModal">
            <i class="fa fa-plus-circle plus-btn"></i>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="ActivityModal" tabindex="-1" role="dialog" aria-labelledby="myAModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title text-center" id="myAModalLabel">Add an activity</h4>
                </div>
                <div class="modal-body">
                  <%= simple_form_for [@trip, @activity] do |f| %>
                    <%= f.input :date, as: :string, required: false, input_html: { class: "datepicker" }, class: 'form-control', data_altinput: true, data_enabletime: true, placeholder: "Date", label: false %>
                    <%= f.input :name, class: 'form-control', placeholder: "Name", label: false %>
                    <%= f.input :url, class: 'form-control', placeholder: "Url", label: false %>
                    <!-- Ici on pourrait suggÃ©rer l'adresse , tel etc directement en scrapant l'url par AJAX - semaine prochaine -->
                    <%= f.input :address, class: 'form-control', placeholder: "Address", label: false %>
                    <div class="row">
                    <div class="col-xs-6">
                    <%= f.input :phone_number, class: 'form-control', placeholder: "Phone number", label: false %>
                    </div>
                    <div class="col-xs-6">
                    <%= f.input :email, class: 'form-control', placeholder: "Email", label: false %>
                    </div>
                    </div>
                    <%= f.input :description, class: 'form-control', placeholder: "Description", label: false %>
                    <%= f.input :status, collection: ["Wishlist", "Booked"], default: "Wishlist", class: 'form-control', label: false %>
                    <!-- Add participants -->

                    <%= f.submit "Save", class: 'btn btn-info', style: 'width: 100%' %>
                    <form action="activity/create">
                      <% @trip.participations.each do |part| %>
                        <input type="checkbox" name="<%= part.pseudo %>"> <%= part.pseudo %>
                        <%#= f.label part.pseudo %>
                        <%#= f.check_box :participation, checked_value: part, unchecked_value: nil %>
                      <% end %>
                      <%#= f.select :participants, collection: @trip_participants, {multiple: true} %>
                      </form>

                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

          <h4>All activities</h4>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Contact</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% @activities.each do |activity| %>
                <% if activity.date != Date.today %>
                <tr>
                  <td class="name">
                    <p><%= link_to activity.name, activity.url, class: "name-link", target: "_blank" %></p>
                  </td>
                  <td class="contact">
                    <p><%= activity.address%></p>
                    <p><%= activity.email%></p>
                    <p><%= activity.phone_number%></p>
                  </td>
                  <td class="date">
                    <% if activity.date %>
                    <p><%= activity.date.strftime("%b %d, %Y") %></p>
                    <p>@ <%= activity.date.strftime("%H:%M") %></p>
                    <% else %>
                    <p>Not scheduled yet</p>
                    <% end %>
                  </td>
                  <td class="description">
                    <p><%= activity.description%></p>
                  </td>
                  <td class="status">
                    <div class="<%= activity.status%>">
                      <div class="btn-group">
                        <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= activity.status%>
                        </button>
                        <div class="dropdown-menu">
                          <%= link_to "Wishlist", trip_activity_path(@trip, activity, status: "Wishlist"), method: :patch, class: "dropdown-item status-dropdown-item" %>
                          <%= link_to "Booked", trip_activity_path(@trip, activity, status: "Booked"), method: :patch, class: "dropdown-item status-dropdown-item" %>
                          <div class="dropdown-divider"></div>
                          <%= link_to "Delete", trip_activity_path(@trip, activity), method: :delete, class: "dropdown-item status-dropdown-item" %>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        </div>
<!--
        <div class=" wishlist-card hidden-xs">

          <h4>Wishlist</h4>
        </div>

    </div>
  </div>
</div>



