<h2 class="text-center">Edit activity</h2>

<div class="new-container">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <img src="<%= @activity.photo %>" size="16" alt="Edit Entry">

      <%= simple_form_for @activity do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :email %>
        <%= f.input :url %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.select :trip, options_for_select(@trips) %>
          <%= f.button :submit, class: "btn btn-info btn-form", style: "margin-bottom: 20px" %>
        <%= f.submit "Update activity", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
</div>
