<h2 class="text-center" style="margin-right: 80px">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-container" style="margin-right: 80px">
    <div class="container">
      <div class="row">
        <div class="form-inputs col-sm-4 col-sm-offset-4">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions col-sm-4 col-sm-offset-4 text-center">
          <%= f.button :submit, "Log in", class: "btn btn-info" %> <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>


