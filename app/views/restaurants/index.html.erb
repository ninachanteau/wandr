<div class="new-container">
  <div class="container">

    <div class="header">
      <div class="title text-center"> <h2><%= @trip.name  %>  ...  <i class="fa fa-cutlery title-icon"></i></h2>
      </div>
    </div>

    <div class="restaurants-container">
      <div class="restaurants-ctn">
        <div class="restaurants-card">
          <h4>Today (<%= Date.today.strftime("%b %d, %Y") %>)</h4>
          <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% @my_restaurants.where(date: Date.today).each do |restaurant| %>
            <tr>
              <td class="name">
                <p><%= link_to restaurant.name, restaurant.url %></p>
              </td>
              <td class="contact">
                <p><%= restaurant.address%></p>
                <p><%= restaurant.email%></p>
                <p><%= restaurant.phone_number%></p>
              </td>
              <td class="date">
                <% if restaurant.date %>
                  <p><%= restaurant.date.strftime("%b %d, %Y") %></p>
                  <p><%= restaurant.date.strftime("%H:%M") %></p>
                <% else %>
                  <p>Not scheduled yet</p>
                <% end %>
              </td>
              <td class="description">
                <p><%= restaurant.description%></p>
              </td>
              <td class="status">
                <div class="<%= restaurant.status%>">
                  <div class="btn-group">
                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= restaurant.status%>
                    </button>
                    <div class="dropdown-menu">
                      <%= link_to "Wishlist", trip_restaurant_path(@trip, restaurant, status: "Wishlist"), method: :patch, class: "dropdown-item" %>
                      <%= link_to "Booked", trip_restaurant_path(@trip, restaurant, status: "Booked"), method: :patch, class: "dropdown-item" %>
                      <div class="dropdown-divider"></div>
                      <%= link_to "Delete", trip_restaurant_path(@trip, restaurant), method: :delete, class: "dropdown-item" %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="participants">
                <% restaurant.participants.each do |participant| %>
                  <%= cl_image_tag participant.avatar, class: "avatar", crop: :fill%>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

        </div>
        <div class="restaurants-card">

          <!-- Button trigger modal -->
          <div type="button" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-plus-circle plus-btn"></i>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title text-center" id="myModalLabel">Add a restaurant</h4>
                </div>
                <div class="modal-body">
                  <%= simple_form_for [@trip, @restaurant] do |f| %>
                    <%= f.input :date, as: :string, required: false, input_html: { class: "datepicker" }, class: 'form-control', data_altinput: true, data_enabletime: true, placeholder: "Date", label: false %>
                    <%= f.input :name, class: 'form-control', placeholder: "Name", label: false %>
                    <%= f.input :url, class: 'form-control', placeholder: "Url", label: false %>
                    <!-- Ici on pourrait suggÃ©rer l'adresse , tel etc directement en scrapant l'url par AJAX - semaine prochaine -->
                    <%= f.input :address, class: 'form-control', placeholder: "Address", label: false %>
                    <%= f.input :phone_number, class: 'form-control', placeholder: "Phone number", label: false %>
                    <%= f.input :email, class: 'form-control', placeholder: "Email", label: false %>
                    <%= f.input :description, class: 'form-control', placeholder: "Description", label: false %>
                    <%= f.input :status, collection: ["Wishlist", "Booked"], default: "Wishlist", class: 'form-control', label: false %>
                    <!-- Add participants -->

                    <%= f.submit class: 'btn btn-info', style: 'width: 100%' %>
                    <form action="restaurant/create">
                      <% @trip.participations.each do |part| %>
                        <input type="checkbox" name="<%= part.pseudo %>"> <%= part.pseudo %>
                        <%#= f.label part.pseudo %>
                        <%#= f.check_box :participation, checked_value: part, unchecked_value: nil %>
                      <% end %>
                      <%#= f.select :participants, collection: @trip_participants, {multiple: true} %>
                      </form>

                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

        <h4>All Restaurants</h4>
        <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
            <% if restaurant.date != Date.today %>
            <tr>
              <td class="name">
                <p><%= link_to restaurant.name, restaurant.url %></p>
              </td>
              <td class="contact">
                <p><%= restaurant.address%></p>
                <p><%= restaurant.email%></p>
                <p><%= restaurant.phone_number%></p>
              </td>
              <td class="date">
                <% if restaurant.date %>
                  <p><%= restaurant.date.strftime("%b %d, %Y") %></p>
                  <p><%= restaurant.date.strftime("%H:%M") %></p>
                <% else %>
                  <p>Not scheduled yet</p>
                <% end %>
              </td>
              <td class="description">
                <p><%= restaurant.description%></p>
              </td>
              <td class="status">
                <div class="<%= restaurant.status%>">
                  <div class="btn-group">
                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= restaurant.status%>
                    </button>
                    <div class="dropdown-menu">
                      <%= link_to "Wishlist", trip_restaurant_path(@trip, restaurant, status: "Wishlist"), method: :patch, class: "dropdown-item" %>
                      <%= link_to "Booked", trip_restaurant_path(@trip, restaurant, status: "Booked"), method: :patch, class: "dropdown-item" %>
                      <div class="dropdown-divider"></div>
                      <%= link_to "Delete", trip_restaurant_path(@trip, restaurant), method: :delete, class: "dropdown-item" %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="participants">
                <% restaurant.participants.each do |participant| %>
                  <% if participant.avatar %>
                  <%= cl_image_tag participant.avatar, class: "avatar", crop: :fill%>
                  <% else %>
                  <%= cl_image_tag "default-user.png", class: "avatar", crop: :fill%>
                  <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>

<!--     <div class=" wishlist-card hidden-xs">
      <h4>Wishlist:</h4>
    </div> -->

    </div>
  </div>
</div>

