<div class="new-container">
  <div class="container">

    <div class="header">
      <div class="title text-center"> <h2><%= @trip.name  %>  ...  <i class="fa fa-cutlery title-icon"></i></h2>
      </div>
    </div>

<h4>New Restaurant</h4>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for [@trip, @restaurant] do |f| %>
          <p>Enter a projected date and time <em>(optional)</em></p>

          <%= f.input :date, as: :string, required: false, input_html: { class: "datepicker" }, class: 'form-control' %>
          <%= f.input :start_time, label: "Time", class: 'form-control' %>

          <p>Quick add - Enter a link</p>

          <%= f.input :url, label: "link", class: 'form-control' %>
          <!-- Ici on pourrait suggÃ©rer l'adresse , tel etc directement en scrapant l'url par AJAX - semaine prochaine -->
          <%= f.submit class: 'btn btn-primary' %>

          <p>or</p>
          <p>Enter a new restaurant manually: </p>

          <%= f.input :address, label: "Address", class: 'form-control' %>
          <%= f.input :phone_number, label: "Phone number", class: 'form-control' %>
          <%= f.input :email, label: "Email", class: 'form-control' %>
          <%= f.input :description, label: "Description", class: 'form-control' %>
          <%= f.input :status, collection: ["Wishlist", "Booked"], default: "Wishlist", class: 'form-control' %>
          <!-- Add participants -->
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
