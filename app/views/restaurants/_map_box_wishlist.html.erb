<div class="text-center">
  <h4><%= restaurant.name %></h4>
  <h5>Reservation: <%= render 'shared/wishlist-icon' %></h5>
  <% if restaurant.date.present? %>
    <h6>On: <%= restaurant.date.strftime("%b %d, %Y") %> @ <%= restaurant.date.strftime("%H:%M") %></h6>
  <% end %>
  <p><%= restaurant.address %></p>
</div>
