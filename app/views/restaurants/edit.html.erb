
<img src="<%= @restaurant.photo %>" size="16" alt="Edit Entry" id="img-cover">

<%= simple_form_for @restaurant do |f| %>
  <div class="form-container" style="margin-right: 80px; color:$light-gray">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :email %>
          <%= f.input :url %>
          <%= f.input :description %>
          <%= f.input :photo %>
          <%= f.select :trip, options_for_select(@trips) %>
          <%= f.button :submit, class: "btn btn-info btn-form", style: "margin-bottom: 20px" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
