<h2 class="text-center">Add a trip</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@trip) do |f| %>
        <%= f.input :name %>
        <%= f.input :destination %>
        <%= f.input :photo %>
        <%= f.input :description %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit "Add trip", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
