function openModal() {
  const button = document.getElementById("Modalbutton");
  button.click();
}

function getForm() {
  const form = document.getElementById("EditForm");
  form.innerHTML = "<%= j render 'trips/navbar_activities/edit_form', activity: @activity, trips: @trips, trip: @trip %>"
}

function updateForm() {
  const form = document.getElementById("UpdateForm");
  form.innerHTML = "<%= j render 'trips/navbar_activities/update_form', activity: @activity, trips: @trips, trip:  @trip %>"
}

<% if request.referrer.include?('trips') %>
  updateForm();
  openModal();
<% else %>
  getForm();
  openModal();
<% end %>
