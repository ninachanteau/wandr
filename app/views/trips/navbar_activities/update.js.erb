function loadActivities(innerHTML) {
  const wrapper = document.querySelector('.wrapper');
  wrapper.innerHTML = innerHTML;
  // reload forms wepback script
  const head = document.querySelector("head");
  const scriptElement = document.createElement('script');
  scriptElement.src = '<%= javascript_pack_tag "forms" %>'.match(/src="(.*)">/)[1];
  head.appendChild(scriptElement);
  document.querySelector('.modal-backdrop.fade.in').remove();
};

loadActivities(`'<%= j render "activities/index", activities: @activities, participation: @participation, trip_dates: @trip_dates, trip_participants: @trip_participants, trip: @trip, activity: @activity,  my_activities: @my_activities %>'`);
