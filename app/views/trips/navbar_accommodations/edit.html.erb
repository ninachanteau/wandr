<img src="<%= @accommodation.photo %>" size="16" alt="Edit Entry" id="img-cover">

<%= simple_form_for @accommodation, url: url_for(controller: 'navbar_accommodations', action: 'update') do |f| %>
<div class="new-container">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :email %>
        <%= f.input :url %>
        <%= f.input :photo %>
        <%= f.select :trip, options_for_select(@trips) %>
        <%= f.button :submit, class: "btn btn-info btn-form", style: "margin: 20px" %>
      <% end %>
    </div>
  </div>
</div>
</div>

